@model GameApplication.Models.ButtonModel

@{
    //store image names in an array for more efficient code.
    string[] imageNames = { "BlueButton.png", "RedButton.png", "GreenButton.png", "Flag.png" };
}

<button class="game-button" type="submit" value="@Model.Id" name="buttonNumber" asp-controller="Button" asp-action="HandleButtonClick">                
    <img class="game-button" src="~/img/@imageNames[Model.ButtonState]" />
    <div class="buttom-label">
        @Model.Id
        ,
        @Model.ButtonState
        </div>
</button>
